<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<style>
			.ui-jcoverflip {
				position: relative;
			}
			.ui-jcoverflip--item {
				position: absolute;
				display: block;
			}
		</style>
		<title>EPrints Document Grid</title>
	</head>
	<body>
		<dl>
		: for $eprints -> $eprint {
			<dt id="<: $eprint.id :>"><: $eprint.title :></dt>
			<dd>
				<ul>
				: for $eprint.documents -> $doc {
					<li><img src="<: $doc.img :>"/><span class="title">Title</span></li>
				: }
				</ul>
			</dd>
		: }
		</dl>
		<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
		<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
		<script type="text/javascript" src="/javascript/jquery.jcoverflip.js"></script>
		<script>
			$( function(){
				$( 'ul' ).each(
					$(this).jcoverflip();
				)
			})
    </script>
	</body>
</html>
