<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<title>EPrints Document List</title>
		<style type="text/css">
			hr {color:sienna;}
			p {margin-left:20px;}
			body {background-image:url("images/back40.gif");}
		</style>
	</head>
	<body>
		<ol class="eprints">
		: for $eprints -> $eprint {
			<li>
				<article id="<: $eprint.id :>" class="eprint">
				<header><h2><a href="<: $eprint.url :>"><: $eprint.title :></a></h2></header>
					<ul class="documents">
					: for $eprint.documents -> $doc {
						<li class="document">
							<a href="<: $doc.url :>">
								<span class="title"></span>
								<img src="<: $doc.img :>"/>
							</a>
							<span class="type"><: $doc.type :></span>
						</li>
					: }
					</ul>
				</article>
			</li>
		: }
		</ol>
	</body>
</html>
